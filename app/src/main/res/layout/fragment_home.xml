<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    android:fitsSystemWindows="true"
    tools:context=".fragment.HomeFragment">

    <!-- Settings Button (Top Right) -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Settings"
        android:src="@drawable/ic_baseline_settings_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#AAAAAA" />

    <!-- ============================================ -->
    <!-- TOP SECTION: Status Info -->
    <!-- ============================================ -->
    
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/status_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="#00000000"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Main Status Text -->
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready to Connect"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Server Info - Location/Country -->
            <TextView
                android:id="@+id/tv_server_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text=""
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:visibility="gone" />

            <!-- Latency Display -->
            <TextView
                android:id="@+id/tv_latency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:visibility="gone" />

            <!-- Connecting Progress -->
            <ProgressBar
                android:id="@+id/progress_connecting"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="8dp"
                android:indeterminateTint="#FF9800"
                android:visibility="gone" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ============================================ -->
    <!-- MIDDLE SECTION: Flag + Slogan + Button -->
    <!-- Vertically centered between status and bottom -->
    <!-- ============================================ -->

    <!-- Lion and Sun Flag (Above Button) -->
    <ImageView
        android:id="@+id/iv_flag"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:contentDescription="Lion and Sun Flag"
        android:src="@drawable/lion_flag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_card"
        app:layout_constraintBottom_toTopOf="@id/tv_slogan"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.35" />

    <!-- Javid Shah Slogan (Golden Calligraphic) -->
    <TextView
        android:id="@+id/tv_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="جاوید شاه"
        android:textColor="@color/gold_metallic"
        android:textSize="22sp"
        android:fontFamily="serif"
        android:letterSpacing="0.05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_flag"
        app:layout_constraintBottom_toTopOf="@id/btn_connect" />

    <!-- Main Connect Button - Centered -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_connect"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:text="TAP TO\nCONNECT"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        app:backgroundTint="#4CAF50"
        app:cornerRadius="80dp"
        app:elevation="8dp"
        app:rippleColor="#66FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_slogan"
        app:layout_constraintBottom_toTopOf="@id/tv_hint" />

    <!-- Hint Text Below Button -->
    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Auto-selects fastest server"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_connect"
        app:layout_constraintBottom_toTopOf="@id/bottom_buttons" />

    <!-- ============================================ -->
    <!-- BOTTOM SECTION: Navigation Buttons -->
    <!-- ============================================ -->

    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Server List Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_server_list"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Servers"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:strokeColor="#444466"
            app:strokeWidth="1dp"
            app:icon="@drawable/ic_baseline_list_24"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart" />

        <!-- Manual Connect Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_manual_connect"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Manual"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:strokeColor="#444466"
            app:strokeWidth="1dp"
            app:icon="@drawable/ic_baseline_edit_24"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
