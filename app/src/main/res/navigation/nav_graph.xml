<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="kittoku.osc.fragment.HomeFragment"
        android:label="YAS VPN" >
        <action
            android:id="@+id/action_HomeFragment_to_ServerListFragment"
            app:destination="@id/ServerListFragment" />
        <action
            android:id="@+id/action_HomeFragment_to_ManualConnectFragment"
            app:destination="@id/ManualConnectFragment" />
        <action
            android:id="@+id/action_HomeFragment_to_SettingFragment"
            app:destination="@id/SettingFragment" />
    </fragment>

    <fragment
        android:id="@+id/ServerListFragment"
        android:name="kittoku.osc.fragment.ServerListFragment"
        android:label="Server List" />
        
    <fragment
        android:id="@+id/ManualConnectFragment"
        android:name="kittoku.osc.fragment.ManualConnectFragment"
        android:label="Manual Connection" />
        
    <fragment
        android:id="@+id/SettingFragment"
        android:name="kittoku.osc.fragment.SettingFragment"
        android:label="Settings">
        <action
            android:id="@+id/action_SettingFragment_to_LogViewerFragment"
            app:destination="@id/LogViewerFragment" />
        <action
            android:id="@+id/action_SettingFragment_to_AboutFragment"
            app:destination="@id/AboutFragment" />
    </fragment>
        
    <fragment
        android:id="@+id/AboutFragment"
        android:name="kittoku.osc.fragment.AboutFragment"
        android:label="About" />
        
    <fragment
        android:id="@+id/LogViewerFragment"
        android:name="kittoku.osc.fragment.LogViewerFragment"
        android:label="Logs" />

</navigation>
